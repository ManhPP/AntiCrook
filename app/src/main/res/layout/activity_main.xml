<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="@color/backgroundview"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="45"
        android:src="@drawable/cover"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="75"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:weightSum="100">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:src="@drawable/power"
                    android:scaleX="0.75"
                    android:scaleY="0.75"
                    android:layout_marginTop="5sp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="90"
                    android:gravity="bottom"
                    android:paddingLeft="5dp"
                    android:text="Kích hoạt"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:gravity="center_vertical"
                android:layout_marginLeft="35dp"
                android:text="Bật tắt hoạt động ứng dụng"
                android:textColor="@color/detailColor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="25"
            android:orientation="vertical"
            android:weightSum="100"
            android:layout_height="match_parent"
            android:paddingRight="10sp">
            <Switch
                android:id="@+id/switchbutton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:paddingTop="15dp"
                android:theme="@style/SwitchTheme" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/settingGroup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:weightSum="100"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="100"
            android:weightSum="100"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:paddingLeft="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="100"
                android:layout_weight="50">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="7.5"
                    android:layout_height="match_parent"
                    android:src="@drawable/settings"
                    android:scaleX="0.75"
                    android:scaleY="0.75"
                    android:layout_marginTop="5sp"
                    />
                <TextView
                    android:id="@+id/tvSetting"
                    android:layout_width="0dp"
                    android:textColor="#fff"
                    android:layout_height="match_parent"
                    android:layout_weight="92.5"
                    android:paddingLeft="5dp"
                    android:text="Cài đặt"
                    android:gravity="bottom"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    />

            </LinearLayout>
            <TextView
                android:textColor="@color/detailColor"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:paddingLeft="35dp"
                android:text="Tùy chỉnh cài đặt ứng dụng"
                android:gravity="center_vertical"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:weightSum="100"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="100"
            android:weightSum="100"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:paddingLeft="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="100"
                android:layout_weight="50">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5sp"
                    android:layout_weight="7.5"
                    android:scaleX="0.75"
                    android:scaleY="0.75"
                    android:src="@drawable/uninstall" />

                <TextView
                    android:layout_width="0dp"
                    android:textColor="#fff"
                    android:layout_height="match_parent"
                    android:layout_weight="92.5"
                    android:paddingLeft="5dp"
                    android:text="Gỡ bỏ"
                    android:gravity="bottom"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    />

            </LinearLayout>
            <TextView
                android:textColor="@color/detailColor"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:paddingLeft="35dp"
                android:text="Gỡ bỏ ứng dụng"
                android:gravity="center_vertical"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="19"
        android:orientation="vertical"
        android:weightSum="100"
        android:paddingTop="20sp"
        android:paddingLeft="15sp"
        android:paddingRight="15sp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="70"
            android:orientation="horizontal"
            android:weightSum="100"
            android:background="#2c393c"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="match_parent"
                android:src="@drawable/info"
                android:scaleX="0.3"
                android:scaleY="0.3"
                />
            <TextView
                android:textColor="#fff"
                android:layout_width="0dp"
                android:layout_weight="80"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:text="Thông tin ứng dụng"
                android:textStyle="bold"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
